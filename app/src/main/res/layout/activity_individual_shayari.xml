<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:weightSum="3"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <FrameLayout
            android:id="@+id/fl_shayari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg2"
            android:layout_margin="@dimen/margin_small"
            android:elevation="5dp"
            android:layout_weight="2.7">
            <TextView
                android:id="@+id/tv_shayari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="आज फिर एक नयी सुबह आई है,
साथ अपने एक नयी उम्मीद लाई है,
है असर तुम्हारी याद का ऐसा कि
हवाएं भी अपने साथ तुम्हारी परछाई लाई है।
गुड मॉर्निंग।"
                android:layout_gravity="center"
                android:textSize="@dimen/text_large"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="@dimen/padding_small"
                />
        </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg2"
        android:layout_marginVertical="@dimen/margin_x_small"
        android:layout_marginHorizontal="@dimen/margin_small"
        android:layout_weight="0.3"
        android:weightSum="4"
        android:gravity="center_vertical"
        android:elevation="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_prev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_prev"
            android:background="@drawable/circle_bg"
            android:padding="10dp"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_copy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_copy"
            android:background="@drawable/circle_bg"
            android:padding="10dp"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_share"
            android:background="@drawable/circle_bg"
            android:padding="10dp"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_prev"
            android:rotation="180"
            android:background="@drawable/circle_bg"
            android:padding="10dp"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>